[user]
	name = TheSast
	email = 27977196+TheSast@users.noreply.github.com
  signingKey = ~/.ssh/id_ed25519.pub

[commit]
	gpgsign = true

[gpg]
	format = ssh

[core]
	editor = nvim
	pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  line-numbers = true
  side-by-side = true
  hyperlinks = true
  hyperlinks-file-link-format = "file-line://{path}:{line}"
  colorMoved = default

[merge]
  conflictstyle = diff3

[init]
	defaultBranch = main

[alias]
	lo = log --color --decorate --graph --pretty=oneline --abbrev-commit --date=iso8601
	st = status --short --branch --show-stash --ahead-behind
	ls = !exa --git-ignore --icons -l --git --no-permissions --no-filesize --no-user --no-time  
	dif = !git diff | bat --language diff
	track = add
	untrack = rm --cached -r
	unstage = restore --staged
	uncommit = !echo "cool idea, but git reset is a sad command that defaults to ALL FILES when given no commit, use 'git reset --mixed [commit]'"
	commit-date = commit -m "`date +'%m/%d/%Y %H:%M %:z'`" # does not work :(
	ui = !gitui
	amend = commit --amend


[advice]
	addEmptyPathspec = true

[includeIf "gitdir:/workspace/school/"]
	path = /workspace/school/.gitconfig-school
